<h1>New Book</h1>


<%= form_tag(books_url, method: 'post') do %>


  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :author_id %><br />
    <%= number_field_tag :author_id %>
  </div>


  <div>
    <%= submit_tag "Create Book" %>
  </div>
<% end %>
