<h1>Editing Book #<%= @book.id %></h1>


<%= form_tag(book_url(@book), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @book.title %>
  </div>

  <div>
    <%= label_tag :author_id %><br />
    <%= number_field_tag :author_id, @book.author_id %>
  </div>

  <div>
    <%= submit_tag "Update Book" %>
  </div>

<% end %>
